<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.evrazcoin.evrazwallet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.bitshares.bitshareswallet.BitsharesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_evraz"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bitshares.bitshareswallet.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bitshares.bitshareswallet.SignUpButtonActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_sign_up_button"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme" />
        <activity
            android:name="com.bitshares.bitshareswallet.SignUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme" />
        <activity
            android:name="com.bitshares.bitshareswallet.ImportActivty"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme" />
        <activity
            android:name="com.bitshares.bitshareswallet.ModelSelectActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="1516f2abc1f71a4a06a0b84c26caaa01398302fb" />

        <activity
            android:name="com.bitshares.bitshareswallet.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bitshares.bitshareswallet.AboutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme" />
        <activity android:name="com.bitshares.bitshareswallet.CreateAccountActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme" />
    </application>

</manifest>